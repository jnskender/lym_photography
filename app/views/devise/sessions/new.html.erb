
<div class="row">

  <div class="col-sm-12 col-md-6 col-lg-4 mx-auto mt-4 border shadow-nh">
    <h2 class="text-center mt-5">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <div class="field">
        <%= f.label :email, class:"form-label"%><br/>
        <div class="input-group">
          <i class="fa fa-envelope-o input-group-addon" aria-hidden="true" id="basic-addon1"></i>
          <%= f.email_field :email, autofocus: true, class:"form-control" %></div>
      </div>
    </dic>

    <dic class="form-group">
      <div class="field">
        <%= f.label :password, class:"form-label" %><br/>
        <div class="input-group">
          <i class="fa fa-key input-group-addon" aria-hidden="true" id="basic-addon1"></i>
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>
      </div>
    </dic>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="field">

          <%= f.label :remember_me, class:"form-check-inline mr-4"%>
          <%= f.check_box :remember_me, class:"form-check-input" %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-info" %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
<!-- /row -->
