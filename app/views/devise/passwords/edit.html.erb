<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<%= f.hidden_field :reset_password_token %>
<div class="col-sm-10 col-md-6 border mx-auto shadow-nh p-4">
  <h2 class="text-center">Change your password</h2>
  <div class="form-group">
    <%= f.label :password, "New password", class:"form-label" %><br/>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        characters minimum)</em><br/>
    <% end %>
    <div class="input-group">
      <i class="fa fa-key input-group-addon" aria-hidden="true" id="basic-addon1"></i>
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class:"form-label" %><br/>
    <div class="input-group">
      <i class="fa fa-key input-group-addon" aria-hidden="true" id="basic-addon1"></i>
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= f.submit "Change my password", class:"btn btn-info" %>
    </div>
  </div>
</div>

<% end %>
