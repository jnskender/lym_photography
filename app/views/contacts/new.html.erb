<div class="col-sm-12 col-md-8  mx-auto">

<div class="container">
  <h1 class="text-center">Contact</h1>
  <%= simple_form_for @contact, html: {class: 'form-horizontal'}, url: new_contact_path do |f| %>
  <%= f.input :name, required: true %>
  <% if !current_user.nil? %>
  <%= f.input :email, required: true, :input_html => { :value => current_user.email }  %>
  <% elsif current_user.nil? %>
  <%= f.input :email, required: true  %>
  <% end %>
  <%= f.input :message, as: :text, required: false, input_html: { rows: 10 }, hint:"Max 2000 characters" %>
  <div class="form-actions">
    <%= f.button :submit, 'Send message', class:"btn btn-info" %>
  </div>
  <% end %>
</div>
</div>
