<!DOCTYPE html>
<html>

  <%= render 'layouts/head' %>

  <body>

  <%= render 'layouts/nav' %>

    <div class="container">
      <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type} text-center") %>
      <% end %>

      <%= yield %>

    </div>

    <script type="text/javascript">
    $(document).ready(function(){
      $("img").bind("contextmenu",function(e){
        return false;
      });
    });
  </script>

  </body>
</html>
