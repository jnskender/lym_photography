

<div class="col-sm-12 col-md-8 mx-auto border shadow-nh p-4"><%= form_for @post do |f| %>
  <h1 class="text-center"><%= params[:action].titleize %> Post</h1>
<div class="form-group">
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :content %>
    <%= md_simple_editor('btn-xs') do %>
    <%= f.text_area :content, class:"form-control" %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :album_id %>
    <%= collection_select(:post, :album_id, Album.all, :id, :title,{},{:class => "form-control"}) %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <%= f.submit class: "btn btn-submit btn-info" %>
  </div>
</div>

<% end %>
</div>
